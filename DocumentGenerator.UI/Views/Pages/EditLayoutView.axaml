<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:DocumentGenerator.UI.ViewModels.Pages"
    mc:Ignorable="d"
    x:DataType="vm:EditLayoutViewModel"
    FontSize="30"
    x:Class="DocumentGenerator.UI.Views.Pages.EditLayoutView">
    <Grid
        RowDefinitions="Auto, *, Auto">
        <Grid
            ColumnDefinitions="*, Auto"
            Grid.Column="0"
            HorizontalAlignment="Stretch">
                <TextBlock
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Text="{Binding NameLayout}">
                <ComboBox
                    Grid.Column="1"
                    HorizontalAlignment="Right">
                </ComboBox>

            </TextBlock>
        </Grid>
        <Grid
            Grid.Row="1"
            RowDefinitions="Auto, *"
            VerticalAlignment="Stretch">
            <TabControl
                VerticalAlignment="Stretch"
                Grid.Row="1">
                <TabItem Header="Строки"
                         VerticalAlignment="Stretch">
                    <Border
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        CornerRadius="10"
                        Margin="0, 5, 5, 15"
                        BorderThickness="1"
                        BorderBrush="Black">
                        <Border
                            VerticalAlignment="Top"
                            Padding="6"
                            Margin="4"
                            CornerRadius="5"
                            BorderThickness="1"
                            BorderBrush="Black">
                            <ScrollViewer>
                                <StackPanel
                                    Orientation="Vertical">


                                    <StackPanel
                                        Margin="6"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Stretch"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            Text="1. "
                                            FontSize="20"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left" />
                                        <TextBlock
                                            Text=" Участник   "
                                            FontSize="20"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left" />
                                        <ComboBox></ComboBox>
                                        <TextBlock
                                            Text="   из "
                                            FontSize="20"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left" />
                                        <TextBlock
                                            Text="1. "
                                            FontSize="20"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left" />
                                        <Button
                                            Height="35"
                                            BorderThickness="0"
                                            Margin="5"
                                            Padding="6"
                                            FontSize="20"
                                            Content="добавить"
                                            HorizontalAlignment="Right">
                                        </Button>
                                    </StackPanel>


                                    <StackPanel
                                        Orientation="Horizontal"
                                        VerticalAlignment="Bottom"
                                        Margin="6">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Text="Отступы: слева:   "
                                            FontSize="20">
                                        </TextBlock>
                                        <NumericUpDown
                                            FontSize="18"
                                            Value="5">
                                        </NumericUpDown>
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Text="  справа: "
                                            FontSize="20">
                                        </TextBlock>
                                        <NumericUpDown
                                            FontSize="18"
                                            Value="5">
                                        </NumericUpDown>
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Text="  снизу: "
                                            FontSize="20">
                                        </TextBlock>
                                        <NumericUpDown
                                            FontSize="18"
                                            Value="5">
                                        </NumericUpDown>
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Text="  сверху: "
                                            FontSize="20">
                                        </TextBlock>
                                        <NumericUpDown
                                            FontSize="18"
                                            Value="5">
                                        </NumericUpDown>
                                    </StackPanel>


                                    <StackPanel
                                        Orientation="Horizontal"
                                        VerticalAlignment="Bottom"
                                        Margin="6">
                                        <CheckBox
                                            Content="Жирный    "
                                            FontSize="18">
                                        </CheckBox>
                                        <CheckBox
                                            Content="Курсив   "
                                            FontSize="18">
                                        </CheckBox>
                                        <CheckBox
                                            Content="Подчеркнутый  "
                                            FontSize="18">
                                        </CheckBox>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </Border>
                </TabItem>


                <TabItem Header="Правила">
                    <Border
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        CornerRadius="10"
                        Margin="0, 5, 5, 15"
                        BorderThickness="1"
                        BorderBrush="Black">
                        <StackPanel
                            Orientation="Vertical">
                            <Border
                                VerticalAlignment="Top"
                                Padding="6"
                                Margin="4"
                                CornerRadius="5"
                                BorderThickness="1"
                                BorderBrush="Black">

                                <StackPanel
                                    Margin="6"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Stretch"
                                    Orientation="Horizontal">
                                    <TextBlock
                                        Text="1. "
                                        FontSize="20"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left" />
                                    <ComboBox
                                        Margin="10, 0">
                                    </ComboBox>
                                    <ComboBox
                                        Margin="10, 0">
                                    </ComboBox>
                                    <TextBox
                                        Margin="10, 0"
                                        FontSize="18"
                                        VerticalContentAlignment="Center"
                                        VerticalAlignment="Stretch"
                                        Text="5">
                                    </TextBox>
                                </StackPanel>

                            </Border>
                            <Border
                                VerticalAlignment="Top"
                                Padding="6"
                                Margin="4"
                                CornerRadius="5"
                                BorderThickness="1"
                                BorderBrush="Black">

                                <StackPanel
                                    Margin="6"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Stretch"
                                    Orientation="Horizontal">
                                    <TextBlock
                                        Text="2. "
                                        FontSize="20"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left" />
                                    <ComboBox
                                        Margin="10, 0">
                                    </ComboBox>
                                    <ComboBox
                                        Margin="10, 0">
                                    </ComboBox>
                                    <TextBox
                                        Margin="10, 0"
                                        FontSize="18"
                                        VerticalContentAlignment="Center"
                                        VerticalAlignment="Stretch"
                                        Text="5">
                                    </TextBox>
                                </StackPanel>

                            </Border>
                            <Border
                                VerticalAlignment="Top"
                                Padding="6"
                                Margin="4"
                                CornerRadius="5"
                                BorderThickness="1"
                                BorderBrush="Black">

                                <StackPanel
                                    Margin="6"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Stretch"
                                    Orientation="Horizontal">
                                    <TextBlock
                                        Text="3. "
                                        FontSize="20"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left" />
                                    <ComboBox
                                        Margin="10, 0">
                                    </ComboBox>
                                    <ComboBox
                                        Margin="10, 0">
                                    </ComboBox>
                                    <TextBox
                                        Margin="10, 0"
                                        FontSize="18"
                                        VerticalContentAlignment="Center"
                                        VerticalAlignment="Stretch"
                                        Text="5">
                                    </TextBox>
                                </StackPanel>

                            </Border>
                        </StackPanel>
                    </Border>
                </TabItem>


                <TabItem Header="Сопоставления">
                    <Border
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        CornerRadius="10"
                        Margin="0, 5, 5, 15"
                        BorderThickness="1"
                        BorderBrush="Black">
                        <StackPanel
                            Orientation="Vertical">
                            <Border
                                VerticalAlignment="Top"
                                Padding="6"
                                Margin="4"
                                CornerRadius="5"
                                BorderThickness="1"
                                BorderBrush="Black">

                                <StackPanel
                                    Margin="6"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Stretch"
                                    Orientation="Horizontal">
                                    <TextBlock
                                        Text="1. "
                                        FontSize="20"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left" />
                                    <ComboBox
                                        Margin="10, 0">
                                    </ComboBox>
                                    <ComboBox
                                        Margin="10, 0">
                                    </ComboBox>
                                    <ComboBox
                                        Margin="10, 0">
                                    </ComboBox>
                                </StackPanel>

                            </Border>
                            <Border
                                VerticalAlignment="Top"
                                Padding="6"
                                Margin="4"
                                CornerRadius="5"
                                BorderThickness="1"
                                BorderBrush="Black">

                                <StackPanel
                                    Margin="6"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Stretch"
                                    Orientation="Horizontal">
                                    <TextBlock
                                        Text="2. "
                                        FontSize="20"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left" />
                                    <ComboBox
                                        Margin="10, 0">
                                    </ComboBox>
                                    <ComboBox
                                        Margin="10, 0">
                                    </ComboBox>
                                    <ComboBox
                                        Margin="10, 0">
                                    </ComboBox>
                                </StackPanel>

                            </Border>
                            <Border
                                VerticalAlignment="Top"
                                Padding="6"
                                Margin="4"
                                CornerRadius="5"
                                BorderThickness="1"
                                BorderBrush="Black">

                                <StackPanel
                                    Margin="6"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Stretch"
                                    Orientation="Horizontal">
                                    <TextBlock
                                        Text="3. "
                                        FontSize="20"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left" />
                                    <ComboBox
                                        Margin="10, 0">
                                    </ComboBox>
                                    <ComboBox
                                        Margin="10, 0">
                                    </ComboBox>
                                    <ComboBox
                                        Margin="10, 0">
                                    </ComboBox>
                                </StackPanel>

                            </Border>
                        </StackPanel>
                    </Border>
                </TabItem>
            </TabControl>
        </Grid>

        <Grid
            VerticalAlignment="Bottom"
            Grid.Row="2" Grid.ColumnSpan="2"
            Margin="5, 5, 5, 15"
            ColumnDefinitions="*, *">
            <Button
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                Margin="25,0,110, 0"
                Command="{Binding GoBackCommand}"
                Background="OrangeRed"
                HorizontalContentAlignment="Center"
                CornerRadius="10">
                <Button.Content>
                    <StackPanel
                        Orientation="Horizontal">
                        <Image
                            Width="36"
                            Height="34"
                            VerticalAlignment="Stretch"
                            Margin="0,4,0,0"
                            Source="../../Assets/Icons/left-arrow.ico">
                        </Image>
                        <TextBlock
                            Text=" Вернуться">
                        </TextBlock>
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button
                CornerRadius="10"
                HorizontalContentAlignment="Center"
                Grid.Row="0" Grid.Column="1"
                HorizontalAlignment="Stretch"
                Margin="90,0,25, 0"
                Background="LimeGreen"
                Command="{Binding ContinueCommand}">
                <Button.Content>
                    <StackPanel
                        Orientation="Horizontal">
                        <TextBlock
                            Text="Продолжить ">
                        </TextBlock>
                        <Image
                            Width="35"
                            Margin="0,4,0,0"
                            Source="../../Assets/Icons/arrow-right.ico">
                        </Image>
                    </StackPanel>
                </Button.Content>
            </Button>
        </Grid>
    </Grid>
</UserControl>