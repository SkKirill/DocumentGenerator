<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:DocumentGenerator.UI.ViewModels.UserControlsViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:SelectLayoutsViewModel"
             x:Class="DocumentGenerator.UI.Views.UserControlsView.SelectLayoutsView">
    <Grid>
        <Button
            Grid.Row="6" Grid.Column="0"
            HorizontalAlignment="Left"
            Margin="40,0,40, 0"
            Command="{Binding ClearActionButton}"
            Background="Brown"
            Content="Очистить" />
        <Button
            Grid.Row="6" Grid.Column="1"
            Margin="40,0,40, 0"
            HorizontalAlignment="Right"
            Background="Green"
            Command="{Binding ContinueButton}"
            Content="Продолжить" />
    </Grid>
</UserControl>
